<Window x:Class="Time_TimePeriodDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Time_TimePeriodDesktopApp"
        mc:Ignorable="d"
        Title="Clock(Time, TimePeriod)" Height="450" Width="800"
        ResizeMode="NoResize">
    <Border CornerRadius="1"
            Background="#272727">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#444" BorderThickness="1" Grid.Row="1">
                <StackPanel Margin="4" >
                    <Button HorizontalAlignment="Left" Width="180" HorizontalContentAlignment="Left" Background="#505050" Mouse.MouseEnter="Button_MouseEnter" Click="Add_New_Clock">
                        <TextBlock
                        Text="Add a new clock"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        />
                    </Button>
                </StackPanel>
            </Border>

            <Canvas  Grid.Row="1" Grid.Column="1">
                <Ellipse Stroke="Black" 
                     Grid.Column="1" 
                     Height="220" 
                     Width="220"
                     Margin="190,10,190,154" 
                         >

                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/pngtree-clock-face-no-hand-roboto-font-png-image_5683165.png"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Canvas>
        </Grid>
    </Border>
</Window>
